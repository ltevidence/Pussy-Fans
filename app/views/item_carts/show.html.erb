<div class="container-fluid">
    <div class="container">
    <div class="row">
  <% @items.each_with_index do |item, index| %>
    <div class="col-md-3 d-flex align-items-stretch">
      <div href="#" class="card card-product-grid mt-4">
        <a href="/potit_chat/<%=item.id%>"><%=image_tag item.image_url, class:"img-thumbnail"%></a>
        <figcaption class="info-wrap text-center">
          <%= link_to item.title , item_path(item.id) %>
          <div class="price mt-1 text-center"><%= item.price %>€ </div> <!-- price-wrap.// -->
        </figcaption>
      </div>
      </div><!-- col.// --> 
  <%end%>
  <div class="bd-example d-flex mt-5 justify-content-center">
    <%= button_to "Montant total : #{@total} € TTC", checkout_create_path(total: @total * 100), class:"btn btn-info btn-lg px-5", remote: true%>
  </div>
</div>
</div><!-- container // -->
