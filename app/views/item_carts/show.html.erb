<div class="row mt-3">
  <% @items.each_with_index do |item, index| %>
    <div class="col-md-3">
      <div href="#" class="card card-product-grid mt-4">
        <a href="/items/<%=item.id%>" class="img-wrap"> <%= image_tag item.image_url, class:"img-thumbnail w-100"%> </a>
        <figcaption class="info-wrap text-center">
          <a href="items/<%=item.id%>"><%= item.title%></a>
          <div class="price mt-1 text-center"><%= item.price %>â‚¬ </div> <!-- price-wrap.// -->
        </figcaption>
      </div>
    </div> <!-- col.// --> 
  <%end%>
  <div class="bd-example d-flex mt-5 justify-content-center">
    <%= button_to "TOTAL: #{@total}", checkout_create_path(total: @total * 100), class:"btn btn-info btn-lg px-5", remote: true%>
  </div>

</div><!-- container // -->
