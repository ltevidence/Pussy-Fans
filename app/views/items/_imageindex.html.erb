<div class="row mt-3">
  <% @items.each_with_index do |item, index| %>
    <div class="col-md-3">
      <div href="#" class="card card-product-grid mt-4" id="description">
        <a href="/potit_chat/<%=item.id%>" class="img-wrap"> <%= image_tag item.image_url, class:"img-thumbnail w-100"%> </a>
        <figcaption class="info-wrap text-center">
          <%= link_to item.title, item_path(item.id), remote: true%>
          <div class="price mt-1 text-center"><%= item.price %>â‚¬ </div> <!-- price-wrap.// -->
        </figcaption>
        <%= link_to "Acheter", create_item_cart_path(:item_id => item.id), { method: "post", action: "create", class:"btn btn-warning" } %>
      </div>
    </div> <!-- col.// --> 
  <%end%>
</div><!-- container // -->
