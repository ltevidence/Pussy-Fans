function validateForm() {
  let name =  document.getElementById('name').value;
  if (name == "") {
      document.querySelector('.status').innerHTML = "Quel est ton prénom ?";
      return false;
  }
  let email =  document.getElementById('email').value;
  if (email == "") {
      document.querySelector('.status').innerHTML = "Tu as oublié de mettre ton adresse mail !";
      return false;
  } else {
      let re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      if(!re.test(email)){
          document.querySelector('.status').innerHTML = "Une faute de frappe quelque part ?";
          return false;
      }
  }
  let subject =  document.getElementById('subject').value;
  if (subject == "") {
      document.querySelector('.status').innerHTML = "Mettre un objet nous permettra de répondre plus vite.";
      return false;
  }
  let message =  document.getElementById('message').value;
  if (message == "") {
      document.querySelector('.status').innerHTML = "Pas de message... Pas de réponse !";
      return false;
  }
  document.querySelector('.status').innerHTML = "C'est envoyé ! Nous te recontacterons au plus vite.";
}