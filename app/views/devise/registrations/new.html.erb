<body>
    <div class="container h-100 mt-5">
      <div
        class="row h-100 d-flex justify-content-center align-items-center mt-5"
      >
        <div class="col-10 col-md-8 col-lg-6">
          <!-- Form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-example") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
     <h1 class="d-flex justify-content-sm-center">Inscription</h1>
  <div class="form-group mt-4">
    <%= f.label :email, "Adresse email"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Entrer l'adresse mail", class:"form-control username" %>
  </div>

  <div class="form-group mt-4">
    <%= f.label :password, "Mot de Passe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Entrer mot de passe", class:"form-control password" %>
  </div>

  <div class="form-group mt-4">
    <%= f.label :password_confirmation, "Confirmation du mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmer mot de passe",  class:"form-control password" %>
  </div>

  <div class="form-group mt-4 d-flex">
    <%= f.submit "Inscription", class:"btn btn-secondary btn-customized" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </body>
</html>
