  <body>
    <div class="container h-100 mt-5">
      <div class="row h-100 justify-content-center align-items-center mt-5">
        <div class="col-10 col-md-8 col-lg-6">
          <!-- Form -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <h1 class="d-flex justify-content-center align-items-center">
              Changer le mot de passe
            </h1>
            <!-- Input fields -->
             <div class="form-group mt-4">
              <%= f.label :email, "Email", class:"form-control email", autocomplete:"Entrer l'adresse mail" %><br />
            </div>
            <div class="form-group mt-4">
              <%= f.label :password, "Nouveau Mot de Passe", class:"form-control password"%><br />
              <% if @minimum_password_length %>
              <em>(<%= minimum_password_length %>caract√®res minimum)</em><br />
              <%end%>
               <%= f.password_field :password, autofocus: true, autocomplete: "Nouveau mot de passe" %>
            </div>
            <div class="form-group mt-4">
              <div class="field">
              <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class:"form-control password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "Confirmation du nouveau mot de passe" %>
            </div>
            </div>
          <div class="actions">
              <%= f.submit "Modifier le mot de passe", class:"btn btn-primary btn-customized mt-3" %>
            </div>
              <% end %>
          <!-- Form end -->
        </div>
      </div>
    </div>
  </body>
